
#include<bits/stdc++.h>
#include<algorithm>
using namespace std;
 
 int main()
 {
     int n;
     int exam;
     cin>>n;
     int capacity=0;
    int still=0;
    for(int i=0;i<n;i++){
        int a,b;
        cin>>a>>b;
        still-=a;
        still+=b;
        capacity=max(capacity,still);
    }
     cout<<capacity<<endl;
 
     return 0;
 }
